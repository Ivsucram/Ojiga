<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Rentunitprice</th>
      <th>Unittime</th>
      <th>Minimumrentingtime</th>
      <th>Maximumrentingtime</th>
      <th>Totalvalue</th>
      <th>Isavailable</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.picture %></td>
        <td><%= item.description %></td>
        <td><%= item.rentUnitPrice %></td>
        <td><%= item.unitTime %></td>
        <td><%= item.minimumRentingTime %></td>
        <td><%= item.maximumRentingTime %></td>
        <td><%= item.totalValue %></td>
        <td><%= item.isAvailable %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

